{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "../dist",
    "rootDir": ".."
  },
  "include": ["./**/*.ts", "../utils/**/*.ts"],
  "exclude": ["node_modules"]
}
